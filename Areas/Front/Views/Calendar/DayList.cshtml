@using Bonsai.Areas.Front.ViewModels.Calendar
@model CalendarDayVM

<div class="calendar-events-header">
    <h2><span class="fa fa-calendar-alt"></span>@Model.Date.ReadableDate</h2>
</div>
<div class="calendar-events-content">

    <div class="card">
        @if (Model.Events.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var evt in Model.Events)
                {
                    var pageTitles = string.Join(", ", evt.RelatedPages.Select(x => x.Title));
                    var multiPage = evt.RelatedPages.Count > 1;
                    var url = multiPage ? Url.Action("Description", "Page", new { key = evt.RelatedEvent.Key })
                                        : Url.Action("Description", "Page", new { key = evt.RelatedPages[0].Key });

                    var title = multiPage ? @evt.RelatedEvent.Title
                                          : evt.RelatedPages[0].Title;

                    <a href="@url" class="calendar-events-item list-group-item">
                        <div class="media">
                            <div class="calendar-events-item-icon mr-3">
                                @foreach (var rp in evt.RelatedPages)
                                {
                                    <div class="image @(multiPage ? "half" : "")" style="background-image: url(@Url.Content(rp.MainPhotoPath));"></div>
                                }
                            </div>
                            <div class="media-body">
                                <h6 class="m-0">@title</h6>
                                <p class="calendar-events-item-name">@evt.Title</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <p>В этот день ничего не произошло.</p>
        }
    </div>

</div>
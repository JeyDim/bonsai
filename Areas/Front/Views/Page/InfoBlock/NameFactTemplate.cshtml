@using Bonsai.Code.DomainModel.Facts.Models
@model NameFactModel

@{
    var isSingle = Model.Values.Length == 1;
}

<tr>
    @*<div class="fact-title">@(isSingle ? "Имя" : "Имена")</div>*@
    <td>
        @foreach (var item in Model.Values)
        {
            <span class="fact-item-main">@item.LastName @item.FirstName @item.MiddleName</span>
            @if (item.Duration != null && !isSingle)
            {
                <span class="fact-item-range" title="@item.Duration.Value.ReadableRange">@item.Duration.Value.ShortReadableRange</span>
            }
        }
    </td>
</tr>